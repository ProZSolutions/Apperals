<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:id="@+id/imageProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/long_banner" />
            <TextView
                android:id="@+id/discountTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/discount_background"
                android:padding="2dp"
                android:text="SAVE 48%"
                android:textSize="10dp"
                android:textColor="@android:color/white"
                 android:layout_marginTop="10dp"  />
            <ImageView
                app:tint="@color/white"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/favoriteIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/wishlist"
                android:layout_gravity="end"
                 android:layout_marginEnd="4dp" />
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="1dp"
                    android:backgroundTint="@color/color_primary"
                    android:background="@drawable/rectangle_with_padding"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/productColors"
                    android:text=" 4 Color "
                    android:textSize="10dp"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:padding="2dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/color_primary"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rectangle_with_border"
                    android:layout_marginRight="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
        <!-- Image Section -->

        <!-- Discount Tag -->


        <!-- Favorite Icon -->


        <!-- Description Section -->
        <TextView
            android:id="@+id/productName"
            android:maxLines="2"
            android:fontFamily="@font/poppins_light"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Women's Ath \nRunner Zip Neck Tulip Wood"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <!-- Colors and Price Section -->
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/originalPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:text="₹2,999.00"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1,550.00"
                android:textSize="13dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Original Price Section -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
