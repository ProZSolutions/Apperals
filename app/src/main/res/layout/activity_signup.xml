<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text=" Sign Up"
            android:textSize="@dimen/top_header"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primaryColor"
            android:gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/secondaryColor"
        android:elevation="8dp"
        android:translationZ="4dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"/>
    <ScrollView
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="20dp"
                android:text="To Create your Account"
                android:textSize="@dimen/top_header"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Full Name*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                 android:text="Name"
                android:inputType="text"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Mobile Number*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="+91 9#######88"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Password*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="Password"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Confirm Password*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="Password"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="D.O.B*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle_with_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="4dp"
                    android:hint="DOB"
                    android:background="@null"
                    android:inputType="number"
                    android:textColorHint="@color/primaryColor"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/date_cal"
                    android:textSize="@dimen/header_left"

                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/primaryColor"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/date_cal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/back_arrow"
                    android:layout_width="23dp"
                    android:layout_height="23dp"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Gender*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle_with_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_marginTop="4dp"
                    android:hint="DOB"
                    android:background="@null"
                    android:inputType="number"
                    android:textColorHint="@color/primaryColor"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                     android:textSize="@dimen/header_left"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/primaryColor"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="Address*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="Address"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="City*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="City"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="20dp"
                android:text="State*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle_with_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_marginTop="4dp"
                    android:hint="DOB"
                    android:background="@null"
                    android:inputType="number"
                    android:textColorHint="@color/primaryColor"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/header_left"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/primaryColor"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:text="Pincode*"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_marginTop="4dp"
                android:hint="Pincode"
                android:inputType="number"
                android:textColorHint="@color/primaryColor"
                android:padding="10dp"
                android:background="@drawable/rectangle_with_border"
                android:textSize="@dimen/header_left"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/primaryColor"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/signup"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/rectangle_with_pad_bl"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Continue"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="25dp"

                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:text="I have an account? "
                    android:textSize="@dimen/header_left"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/primaryColor"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/login"
                    android:text="@string/login"
                    android:textSize="@dimen/header_left"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/primaryColor"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>